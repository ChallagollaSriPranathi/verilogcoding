// 3 to 8 decoder test benchS
module testbench();
reg A,B,C,E;
wire [7:0]y;
decoder uut(A,B,C,E,y);
initial
begin
$monitor("%0dns:A=%b,B=%b,C=%b,E=%b,y=%b",
                $time,A,B,C,E,y);
E=1;
#10 A=0;B=0;C=0;
#10 A=0;B=0;C=1;
#10 A=0;B=1;C=0;
#10 A=0;B=1;C=1;
#10 A=1;B=0;C=0;
#10 A=1;B=0;C=1;
#10 A=1;B=1;C=0;
#10 A=1;B=1;C=1;

#10 E=0;A=1;B=1;C=1;
$finish;
end
endmodule
