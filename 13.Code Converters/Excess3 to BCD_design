//Excess3 to BCD code converter
//behavioral level modelling
module Excess3_to_BCD(input [3:0]X, output reg [3:0]B);
always@(*)
 begin
case (X)
      4'b0011: B = 4'd0;
      4'b0100: B = 4'd1;
      4'b0101: B = 4'd2;
      4'b0110: B = 4'd3;
      4'b0111: B = 4'd4;
      4'b1000: B = 4'd5;
      4'b1001: B = 4'd6;
      4'b1010: B = 4'd7;
      4'b1011: B = 4'd8;
      4'b1100: B = 4'd9;
      default: B = 4'bxxxx; // Invalid Excess-3 input
    endcase
end
endmodule
