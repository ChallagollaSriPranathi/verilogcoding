//Gray to Binary code converter testbench
module testbench();
reg [3:0]G;
wire [3:0]B;
Gray_to_Binary uut(G,B);
initial
begin
G=4'b0000;
#5 G=4'b0001;
#5 G=4'b0010;
#5 G=4'b0011;
#5 G=4'b0100;
#5 G=4'b0101;
#5 G=4'b0110;
#5 G=4'b0111;
#5 G=4'b1000;
#5 G=4'b1001;
#5 G=4'b1010;
#5 G=4'b1011;
#5 G=4'b1100;
#5 G=4'b1101;
#5 G=4'b1110;
#5 G=4'b1111;
#5 $finish;
$monitor("%0dns:G=%b,B=%b",$time,G,B);
end
endmodule
