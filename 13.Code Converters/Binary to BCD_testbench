//Binary to BCD code converter testbench
module testbench();
reg [4:1]A;
wire [8:1]B;
Binary_to_BCD uut(A,B);
initial
begin
$monitor("%0dns:A=%b,B=%b",$time,A,B);
A=4'b0000;
#5 A=4'b0001;
#5 A=4'b0010;
#5 A=4'b0011;
#5 A=4'b0100;
#5 A=4'b0101;
#5 A=4'b0110;
#5 A=4'b0111;
#5 A=4'b1000;
#5 A=4'b1001;
#5 A=4'b1010;
#5 A=4'b1011;
#5 A=4'b1100;
#5 A=4'b1101;
#5 A=4'b1110;
#5 A=4'b1111;
#5 $finish;
end
endmodule
