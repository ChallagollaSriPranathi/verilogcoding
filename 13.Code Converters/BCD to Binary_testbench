//BCD to Binary code converter testbench
module testbench();
reg [3:0]A;
wire [3:0]B;
BCD_to_Binary uut(A,B);
initial
begin
$monitor("%0dns:A=%b,B=%b",$time,A,B);
A=4'b0000;
#5 A=4'b0001;
#5 A=4'b0010;
#5 A=4'b0011;
#5 A=4'b0100;
#5 A=4'b0101;
#5 A=4'b0110;
#5 A=4'b0111;
#5 A=4'b1000;
#5 A=4'b1001;
#5 A=4'b1010;
#5 A=4'b1111;
#5 $finish;
end
initial begin
  $monitor("%0dns: A=%b, B=%b", $time, A, B);
  for (A = 0; A <= 4'b1001; A = A + 1)
    #5;
  $finish;
end
endmodule
